@model Company

<div class="card shadow border-0  my-5">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">@(Model.Id != 0 ? "Update" : "Create") Company</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form enctype="multipart/form-data" method="post" class="row">
            <input asp-for="@Model.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="p-3 mt-4">
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.Name" class="p-0"></label>
                            <input asp-for="@Model.Name" class="form-control" />
                            <span asp-validation-for="@Model.Name" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.StreetAddress" class="p-0"></label>
                            <input asp-for="@Model.StreetAddress" class="form-control" />
                            <span asp-validation-for="@Model.StreetAddress" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.City" class="p-0"></label>
                            <input asp-for="@Model.City" class="form-control" />
                            <span asp-validation-for="@Model.City" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.State" class="p-0"></label>
                            <input asp-for="@Model.State" class="form-control" />
                            <span asp-validation-for="@Model.State" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.PostalCode" class="p-0"></label>
                            <input asp-for="@Model.PostalCode" class="form-control" />
                            <span asp-validation-for="@Model.PostalCode" class="text-danger"></span>
                        </div>
                        <div class="row mb-3 p-1">
                            <label asp-for="@Model.PhoneNumber" class="p-0"></label>
                            <input asp-for="@Model.PhoneNumber" class="form-control" />
                            <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
                        </div>

                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                @if (@Model.Id != 0)
                                {
                                    <button type="submit" class="btn btn-primary form-control">Update A Company</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-primary form-control">Create A Company</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btnalert-secondary border form-contol">Back To List</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }

}